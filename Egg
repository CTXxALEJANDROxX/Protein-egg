local Players = game:GetService("Players")
local VirtualInputManager = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer

local function usarProteinEgg()
    local character = player.Character or player.CharacterAdded:Wait()
    local backpack = player:WaitForChild("Backpack")
    local humanoid = character:WaitForChild("Humanoid")
    
    local proteinEgg = backpack:FindFirstChild("Protein egg")
    if not proteinEgg then
        warn("[AUTO EGG] No se encontró el Protein egg en el Backpack.")
        return
    end

    -- Equipar el huevo
    humanoid:EquipTool(proteinEgg)
    task.wait(0.5)

    -- Mover mouse al centro de pantalla (puede variar según resolución)
    VirtualInputManager:SendMouseMoveEvent(500, 300, game, 0)
    task.wait(0.2)

    -- Simular clic izquierdo (MouseButton1)
    VirtualInputManager:SendMouseButtonEvent(500, 300, 0, true, game, 0)
    task.wait(0.1)
    VirtualInputManager:SendMouseButtonEvent(500, 300, 0, false, game, 0)

    print("[AUTO EGG] Se usó el Protein egg.")
end

-- Bucle cada 30 minutos
task.spawn(function()
    while true do
        usarProteinEgg()
        task.wait(1800) -- 30 minutos
    end
end)
